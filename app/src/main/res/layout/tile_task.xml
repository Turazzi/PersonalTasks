<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    card_view:cardCornerRadius="6dp"
    card_view:cardBackgroundColor="#5C56A0"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    card_view:cardElevation="6dp"
    card_view:cardUseCompatPadding="false"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/icon_tile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_task_alt_24"
            android:layout_marginEnd="12dp"
            card_view:tint="#CCC5EC" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/titulo_tile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/titulo"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/descricao_tile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/descricao"
                android:textSize="14sp"
                android:textColor="#CCC5EC"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/data_tile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data"
                android:textSize="12sp"
                android:textColor="#B3A9DC" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
